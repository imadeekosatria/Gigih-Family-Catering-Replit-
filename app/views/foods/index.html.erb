<div class="container-xl" id="foods">
  <%= notice %>
  
  <h1 class="text-center">Menu</h1>
  <%= link_to "Tambah Menu", new_food_path, :class => "btn btn-primary my-1" %>
  <table class="table table-light table-hover table-striped rounded">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama Makanan</th>
        <th scope="col" colspan="2">Harga</th>    
      </tr>
    </thead>
    <tbody>
      <% i = 1 %>
      <% @foods.each do |food| %>
        <tr>
          <th scope="row"><%= i %></th>
          <td><%= food.name %></td>
          <td><%= food.price %></td>
          <td><%= link_to "Show this food", food, :class => "btn btn-outline-secondary btn-md" %></td>
        </tr>
      <% i += 1 %>  
      <% end %>
        
    </tbody>
  </table>
</div>