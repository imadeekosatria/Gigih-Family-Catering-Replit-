<div class="container-xl" id="foods">
  
  <%= notice %>
  <h1 class="text-center">Customers</h1>
  <%= link_to "Add Customer", new_customer_path, :class => "btn btn-primary my-1" %>
  <table class="table table-light table-hover table-striped rounded">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col" colspan="2">Email</th>    
      </tr>
    </thead>
    <tbody>
      <% i = 1 %>
      <% @customers.each do |customer| %>
        <tr>
          <th scope="row"><%= i %></th>
          <td><%= customer.name %></td>
          <td><%= customer.email %></td>
          <td><%= link_to "More", customer, :class => "btn btn-outline-secondary btn-md" %></td>
        </tr>
      <% i += 1 %>  
      <% end %>
        
    </tbody>
  </table>
</div>
